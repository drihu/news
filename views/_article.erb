<li class="article">
  <a class="article__title" href="/item?id=<%= article['id'] %>">
    <%= article['title'] %>
  </a>

  <% if article['domain'] %>
    <a class="article__domain" href="<%= article['url'] %>" target="_blank">
      <%= article['domain'] %>
    </a>
  <% end %>

  <div class="article__metadata">
    <div>
      <%= article['time_ago'] %>
      <% if article['user'] %>
        by <%= article['user'] %>
      <% end %>
    </div>
    <div><%= article['comments_count'] %> comments</div>
  </div>
</li>
